<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginVertical="20dp"
                android:src="@drawable/logo_autoaegis"
                android:layout_gravity="center"></ImageView>
            <TextView
                android:id="@+id/payment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:layout_marginVertical="20dp"
                android:layout_gravity="center"
                android:textSize="24sp"></TextView>

                <TextView
                    android:id="@+id/payment_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Address"
                    android:layout_gravity="center"
                    android:textSize="24sp"></TextView>
                <ImageView
                    android:id="@+id/payment_edit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/edit_pencil"
                    android:tint="#000"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"></ImageView>
            <LinearLayout
                android:id="@+id/payment_edit_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/payment_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="100dp"
                    android:background="@drawable/border_red"
                    android:hint="Enter Your New Address"
                    android:padding="10dp"></EditText>
                <ImageView
                    android:id="@+id/ok_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/check_black"
                    android:layout_marginLeft="20dp"></ImageView>
            </LinearLayout>
            <TextView
                android:id="@+id/payment_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Cart Value"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textSize="24sp"></TextView>
            <ImageView
                android:id="@+id/payment_button_gpay"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="50dp"
                android:background="#000"
                android:padding="2dp"
                android:src="@drawable/gpay"></ImageView>

            <ImageView
                android:id="@+id/payment_button_paytm"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="50dp"
                android:background="#000"
                android:padding="2dp"
                android:src="@drawable/paytm"></ImageView>

            <Button
                android:id="@+id/payment_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Cancel"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:visibility="visible"
                android:layout_marginBottom="3dp"
                android:background="#C4FF0000"></Button>
            <ProgressBar
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="100dp"
                android:visibility="gone"
                android:id="@+id/payment_progress"></ProgressBar>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>