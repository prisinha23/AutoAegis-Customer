<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#000">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#000"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/user_car_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_white_rectangle"></ImageView>
        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/aclonica"
            android:layout_gravity="center"
            android:text="user Name"
            android:textColor="#FFFAFA"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/user_car_image" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="176dp"
            android:layout_marginTop="24dp"
            android:text="Address:"
            android:textColor="#FF00"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/user_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/aladin"
            android:text="Please Update Your Address"
            android:textColor="#FFFAFA"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Contact Details:"
            android:textColor="#FF00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/user_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/aladin"
            android:text="XXXXX XXXXX"
            android:textColor="#FFFAFA"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Car Name"
            android:textColor="#FF00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/car_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/aladin"
            android:text="user Car Name"
            android:textColor="#FFF"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/edit_car_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="#D51C1C"
            android:drawableTop="@drawable/edit_pencil"
            android:text="Edit My details"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="18dp"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:text="my cart"
            android:background="#D51C1C"
            android:drawableTop="@drawable/cart_icon_grey"
            android:textColor="#FFF"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/signout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:background="#D51C1C"
            android:drawableTop="@drawable/logout"
            android:text="logout"
            android:textColor="#FFF"
            android:textSize="18dp"
            android:layout_gravity="center"/>

    </LinearLayout>
</ScrollView>